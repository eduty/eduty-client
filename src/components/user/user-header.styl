.user-header {
  background-image: linear-gradient(to right, $color-accent, #00c6ff);
  color: white;
  height: 220px;
  margin-top: -30px;
}

.user-header__container {
  display: flex;
  flex-direction: row;
}

.user-header__wrapper {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.user-header__avatar {
  box-shadow: 0 0 0 2px white;
  bottom: -65px;
  position: relative;
}

.user-avatar__contrib {
  margin-top: 8px;
  padding-bottom: 0;
}
