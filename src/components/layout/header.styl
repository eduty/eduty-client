.header {
  >>> .v-toolbar {
    background: transparent;
    border-bottom: 1px solid #f1f2f4;
    padding: $spacer 0;
  }

  >>> .v-toolbar__content {
    justify-content: center;
  }
}

.header__container {
  align-items: center;
  display: flex;
  justify-content: center;
}

.header__logo {
  display: inline-flex;
}
